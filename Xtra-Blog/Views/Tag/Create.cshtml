@{
    ViewData["Title"] = "Create Tag";
}
@model CreateTagVM

<form asp-action="create" asp-controller="tag" method="post" id="tagform">
    <label class="tm-color-primary" for="name" style="cursor:pointer">Name</label>
    <input class="form-control" id="name" asp-for="Name" style="width: 60%" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>
<button class="tm-btn tm-btn-primary tm-btn-small" type="submit" style="margin-top: 30px" form="tagform">Create Tag</button>