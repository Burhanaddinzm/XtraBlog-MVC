@model List<Tag>

<h1 class="tm-color-primary" style="margin:50px 0">Existing Tags</h1>
<table class="table table-sm" style="width:60%;margin:50px 0">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody >
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@Model[i].Name</td>
                <td style="padding-left:38%">
                    <a class="btn btn-primary" asp-action="update" asp-controller="tag" asp-route-id="@Model[i].Id">Update</a>
                    <a class="btn btn-danger" asp-action="delete" asp-controller="tag" asp-route-id="@Model[i].Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>