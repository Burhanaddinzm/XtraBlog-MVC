@model List<Tag>

<h1 class="tm-color-primary" style="margin:50px 0">Existing Tags</h1>

<table class="table table-sm" style="width:60%;margin:50px 0">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <th scope="row">1</th>
                <td>Not Found</td>
                <td style="padding-left:38%">
                </td>
            </tr>
        }
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@Model[i].Name</td>
                <td style="display:flex;padding-left:70%;align-items:center;gap:5px">
                    <a class="btn btn-primary" asp-action="update" asp-controller="tag" asp-route-id="@Model[i].Id">Update</a>
                    <form asp-action="delete" asp-controller="tag" asp-route-id="@Model[i].Id" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>